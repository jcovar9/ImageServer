<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - JonahsImageServer</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/JonahsImageServer.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light border-3 border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <div class="d-flex align-items-center navbar-brand">
                    <label>Jonahs Image Server</label>
                    @if(Context.Session.GetString("UserID") != null)
                    {
                            <p class="ms-3 mb-0 fs-6">Hello,</p>
                            <a class="btn btn-primary btn-sm mx-1" asp-controller="Account" asp-action="Profile">
                                <i class="bi bi-person"></i>
                                @ViewBag.Username
                            </a>
                    }
                </div>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse">
                    <ul class="navbar-nav me-auto">
                        <div class="mt-2"></div>
                        @if (Context.Session.GetString("UserID") != null)
                        {
                            <a class="btn btn-primary btn-sm mx-1" asp-controller="Home" asp-action="EnterDirectory" asp-route-folderIDPath="@ViewBag.RootID">
                                <i class="bi bi-house"></i>
                                Home
                            </a>
                            <div class="mt-1"></div>
                            <a class="btn btn-primary btn-sm mx-1" asp-controller="Home" asp-action="EnterDirectory" asp-route-folderIDPath="@ViewBag.SharedWithMeID">
                                <i class="bi bi-share"></i>
                                Shared With Me
                            </a>
                        }
                        else
                        {
                            <a class="btn btn-primary btn-sm mx-1" asp-controller="Account" asp-action="Login">
                                <i class="bi bi-box-arrow-in-left"></i>
                                Login
                            </a>
                            <div class="mt-1"></div>
                            <a class="btn btn-primary btn-sm mx-1" asp-controller="Account" asp-action="Register">
                                <i class="bi bi-person-plus"></i>
                                Register
                            </a>
                        }
                    </ul>
                    @if (Context.Session.GetString("UserID") != null)
                    {
                        <ul class="navbar-nav">
                            <div class="mt-1"></div>
                            <a class="btn btn-danger btn-sm mx-1" asp-controller="Account" asp-action="Login">
                                <i class="bi bi-box-arrow-left"></i>
                                Logout
                            </a>
                        </ul>
                    }
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - JonahsImageServer
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
